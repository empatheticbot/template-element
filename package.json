{
  "name": "@empatheticbot/template-element",
  "version": "0.1.0",
  "description": "Template for new custom elements.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit",
    "prebuild": "npm run clean && npm run lint && mkdir dist",
    "build": "tsc && rollup -c",
    "prepublishOnly": "npm run build",
    "start": "serve .",
    "test": "jest ./src/**",
    "update": "npm-check -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sledsworth@github.com/empatheticbot/date-element.git"
  },
  "keywords": [
    "custom",
    "elements",
    "web",
    "components",
    "html",
    "javascript"
  ],
  "author": "Steve Ledsworth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/empatheticbot/template-element/issues"
  },
  "homepage": "https://github.com/empatheticbot/template-element#readme",
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "@babel/preset-typescript": "7.16.5",
    "@testing-library/dom": "8.11.1",
    "@testing-library/jest-dom": "5.16.1",
    "babel-jest": "27.4.5",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-custom-elements": "0.0.4",
    "eslint-plugin-github": "4.1.5",
    "jest": "27.4.5",
    "npm-check": "5.9.2",
    "rollup": "2.62.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "serve": "13.0.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "dist/"
  ]
}